@echo off
:: 自动切换到脚本所在的Git项目目录
cd /d "%~dp0"

:: 清屏（可选，让输出更整洁）
cls

:: 显示当前分支状态（清晰展示所在分支、是否有未提交修改）
echo ==============================================
echo 当前Git仓库状态：
echo ----------------------------------------------
git branch --show-current  :: 显示当前所在分支名称
echo ----------------------------------------------
git status --short         :: 简洁显示文件修改状态（无修改则不输出）
echo ==============================================
echo.

:: 执行git pull拉取代码
echo 正在拉取远程代码...
echo ----------------------------------------------
git pull
echo ----------------------------------------------
echo.

:: 提示执行结果+8秒倒计时关闭
echo 操作完成！8秒后自动关闭窗口（按Ctrl+C可取消关闭）...
timeout /t 8 /nobreak >nul  :: 倒计时8秒，不响应按键（除Ctrl+C）

:: 倒计时结束后关闭窗口
exit
@echo off
chcp 65001 >nul 2>&1  :: 切换为UTF-8编码（兼容更多环境）
cd /d "%~dp0"
cls

echo ==============================================
echo 当前Git仓库状态：
echo ----------------------------------------------
git branch --show-current
echo ----------------------------------------------
git status --short
echo ==============================================
echo.

echo 正在拉取远程代码（origin/main）...
echo ----------------------------------------------
git pull origin main  :: 直接指定远程和分支，避免跟踪问题
echo ----------------------------------------------
echo.

echo 操作完成！8秒后自动关闭窗口（按Ctrl+C可取消关闭）...
timeout /t 8 /nobreak >nul
exit
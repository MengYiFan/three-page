@echo off
chcp 936 >nul  :: 强制切换为GBK编码（解决中文乱码）
cd /d "%~dp0"  :: 自动切换到脚本所在目录
cls

:: 中文提示用GBK编码，避免乱码
echo ==============================================
echo 当前Git仓库状态：
echo ----------------------------------------------
git branch --show-current
echo ----------------------------------------------
git status --short
echo ==============================================
echo.

echo 正在拉取远程代码...
echo ----------------------------------------------
git pull
echo ----------------------------------------------
echo.

echo 操作完成！8秒后自动关闭窗口（按Ctrl+C可取消关闭）...
timeout /t 8 /nobreak >nul
exit